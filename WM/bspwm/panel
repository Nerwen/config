export PANEL_FIFO=/home/nindwen/.tmp/bspwm-fifo

[ -e "$PANEL_FIFO" ] && rm "$PANEL_FIFO"
mkfifo "$PANEL_FIFO"

bspc control --subscribe > "$PANEL_FIFO" &
xtitle -sf 'T%s' > "$PANEL_FIFO" &
clock -sf 'S%a %H:%M' > "$PANEL_FIFO" &

cat "$PANEL_FIFO" | ~/.config/bspwm/panel_bar | bar -f "Inconsolata","FontAwesome" -B "#1d1f21" &

wait
