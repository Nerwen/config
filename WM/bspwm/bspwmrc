#! /bin/zsh
unset DBUS_SESSION_BUS_ADDRESS
hsetroot -fill ~/usr/wallpapers/current &
dunst&
compton --config ~/.config/compton.conf &
pa-applet&
unclutter -root -idle 1 &
sxhkd &
export PATH="$PATH:/home/lumo/scripts:/root/.gem/ruby/2.0.0/bin:/home/lumo/.gem/ruby/2.0.0/bin/"

bspc config top_padding 22
bspc config left_padding 0
bspc config right_padding 0
bspc config bottom_padding 0

bspc rule -a Firefox desktop=^2
bspc rule -a Steam desktop=^4


MAINCOLOR="#8fa1b3"

bspc config split_ratio             0.50
bspc config window_gap              30
bspc config borderless_monocle      true
bspc config gapless_monocle         true
bspc config normal_border_color 		'#1d1f21'
bspc config focused_border_color    "$MAINCOLOR"
bspc config presel_border_color     "#8292B2"
bspc config focused_private_border_color "$MAINCOLOR"
bspc config normal_frame_opacity    0
bspc config focused_frame_opacity   0.2  
bspc config auto_cancel             true
bspc config border_width            10

bspc monitor -d a b c d e f g h
bspc desktop ^2 -l monocle 

~/.config/bspwm/panel
