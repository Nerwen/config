
# wm independent hotkeys
#

Print
   kaappaus $(date +%F) >> ~/tmp/kaappauksia

super + Return
    termite

super + w
    menu

super + q
    firefox

super + a
    pavucontrol

super + ctrl+ q
		pkill -USR1 -x "sxhkd"

{_,shift} + XF86AudioRaiseVolume
    ponymix -d {1,2} increase 10

{_,shift} + XF86AudioLowerVolume
   ponymix -d {1,2} decrease 10

XF86AudioMute
   mpc toggle

XF86AudioPrev
    ncmpcpp prev

super + ctrl + i
		xrandr --output DP-0 --rotate {left,normal}
