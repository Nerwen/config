
# wm independent hotkeys
#

Print
   kaappaus $(date +%F) >> ~/tmp/kaappauksia

#super + Return
    #termite

super + w
    menu

super + q
    qutebrowser

super + a
    pavucontrol

super + ctrl+ q
		pkill -USR1 -x "sxhkd"

{_,shift} + XF86AudioRaiseVolume
    ponymix -d {1,2} increase 10

{_,shift} + XF86AudioLowerVolume
   ponymix -d {1,2} decrease 10

XF86AudioMute
   mpc toggle

XF86AudioPrev
    ncmpcpp prev

super + ctrl + i
		xrandr --output DP-0 --rotate {left,normal}; sleep 3;hsetroot -fill ~/usr/wallpapers/{current_vert,current} > ~/aaa

super + ctrl + k
      termite -e "watch -t date +%R"

super + y
      ~/bin/videoi
